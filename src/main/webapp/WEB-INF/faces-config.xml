<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <navigation-rule>
        <from-view-id>/default.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{taskBean.showCreateTask}</from-action>
            <from-outcome>showCreateTask</from-outcome>
            <to-view-id>/createTask.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{taskBean.deleteTask(task)}</from-action>
            <from-outcome>showTasks</from-outcome>
            <to-view-id>/default.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{taskBean.finishTask(task)}</from-action>
            <from-outcome>showTasks</from-outcome>
            <to-view-id>/default.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/createTask.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{taskBean.saveTask}</from-action>
            <from-outcome>showTasks</from-outcome>
            <to-view-id>/default.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>bundles.texts</base-name>
            <var>texts</var>
        </resource-bundle>
        <message-bundle>bundles.messages</message-bundle>
    </application>

</faces-config>
